{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "sink-jdbc",
  "description": "the configuration specification of sink-jdbc",
  "type": "object",
  "properties": {
    "user": {
      "description": "The database user",
      "type": "string"
    },
    "password": {
      "description": "The database password",
      "type": "string"
    },
    "host": {
      "description": "The database hostname",
      "type": "string"
    },
    "port": {
      "description": "The database port",
      "type": "integer"
    },
    "streams": {
      "description": "The streams and mapping",
      "type": "string"
    }
  },
  "required": [ "user", "password", "host", "port", "streams" ]
}
