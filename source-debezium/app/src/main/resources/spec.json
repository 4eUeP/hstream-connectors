{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "source-debezium",
  "description": "the configuration specification of source-debezium",
  "type": "object",
  "properties": {
    "user": {
      "description": "The database user",
      "type": "string"
    },
    "password": {
      "description": "The database password",
      "type": "string"
    },
    "host": {
      "description": "The database host",
      "type": "string"
    },
    "port": {
      "description": "The database host",
      "type": "integer"
    },
    "database": {
      "description": "The database name",
      "type": "string"
    },
    "table": {
      "description": "The table name",
      "type": "string"
    },
    "stream": {
      "description": "The HStream stream name",
      "type": "string"
    }
  },
  "required": [ "user", "password", "host", "port", "database", "table", "stream" ]
}